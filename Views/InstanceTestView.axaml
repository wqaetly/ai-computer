<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AiComputer.ViewModels"
             xmlns:services="using:AiComputer.Services"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AiComputer.Views.InstanceTestView"
             x:DataType="vm:InstanceTestViewModel">

    <Design.DataContext>
        <vm:InstanceTestViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- 顶部控制栏 -->
        <suki:GlassCard Grid.Row="0" Margin="20">
            <StackPanel Spacing="15">
                <!-- 标题和说明 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="联网搜索实例测试"
                               FontSize="20"
                               FontWeight="Bold" />
                    <TextBlock Text="测试 instances.yml 中的 SearxNG 实例可用性，并将结果保存到 available_instances.json"
                               FontSize="12"
                               Opacity="0.7" />
                </StackPanel>

                <!-- 统计信息 -->
                <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,Auto">
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock Text="总数"
                                   FontSize="12"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding TotalCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock Text="可用"
                                   FontSize="12"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding AvailableCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SukiGreen}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock Text="不可用"
                                   FontSize="12"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding UnavailableCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SukiPrimaryColor}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center" Spacing="4">
                        <TextBlock Text="超时"
                                   FontSize="12"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding TimeoutCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#FFA500"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- 进度消息 -->
                <Border Background="{DynamicResource SukiCardBackground}"
                        CornerRadius="8"
                        Padding="12">
                    <TextBlock Text="{Binding ProgressMessage}"
                               TextWrapping="Wrap"
                               FontSize="12" />
                </Border>

                <!-- 按钮组 -->
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="开始测试"
                            Command="{Binding StartTestCommand}"
                            IsEnabled="{Binding !IsTesting}"
                            Classes="Accent">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <avalonia:MaterialIcon Kind="Play" Width="18" Height="18" />
                                    <TextBlock Text="开始测试" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="停止测试"
                            Command="{Binding StopTestCommand}"
                            IsEnabled="{Binding IsTesting}"
                            Classes="Flat Accent">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <avalonia:MaterialIcon Kind="Stop" Width="18" Height="18" />
                                    <TextBlock Text="停止测试" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="重新加载"
                            Command="{Binding ReloadInstancesCommand}"
                            IsEnabled="{Binding !IsTesting}"
                            Classes="Basic">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <avalonia:MaterialIcon Kind="Refresh" Width="18" Height="18" />
                                    <TextBlock Text="重新加载" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </StackPanel>
        </suki:GlassCard>

        <!-- 实例列表 -->
        <ScrollViewer Grid.Row="1" Padding="20,0,20,20">
            <ItemsControl ItemsSource="{Binding Instances}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="services:InstanceInfo">
                        <suki:GlassCard Margin="0,0,0,10" Padding="15">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                <!-- 状态图标 -->
                                <avalonia:MaterialIcon Grid.Column="0"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0">
                                    <avalonia:MaterialIcon.Styles>
                                        <Style Selector="avalonia|MaterialIcon">
                                            <Setter Property="Kind" Value="HelpCircle" />
                                            <Setter Property="Foreground" Value="{DynamicResource SukiLowText}" />
                                        </Style>
                                        <Style Selector="avalonia|MaterialIcon[Tag=Available]">
                                            <Setter Property="Kind" Value="CheckCircle" />
                                            <Setter Property="Foreground" Value="{DynamicResource SukiGreen}" />
                                        </Style>
                                        <Style Selector="avalonia|MaterialIcon[Tag=Unavailable]">
                                            <Setter Property="Kind" Value="CloseCircle" />
                                            <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
                                        </Style>
                                        <Style Selector="avalonia|MaterialIcon[Tag=Timeout]">
                                            <Setter Property="Kind" Value="ClockAlert" />
                                            <Setter Property="Foreground" Value="#FFA500" />
                                        </Style>
                                    </avalonia:MaterialIcon.Styles>
                                    <avalonia:MaterialIcon.Tag>
                                        <Binding Path="Status" />
                                    </avalonia:MaterialIcon.Tag>
                                </avalonia:MaterialIcon>

                                <!-- URL 和错误信息 -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{Binding Url}"
                                               FontSize="13"
                                               FontWeight="Medium" />
                                    <TextBlock Text="{Binding ErrorMessage}"
                                               FontSize="11"
                                               Opacity="0.6"
                                               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>

                                <!-- 响应时间 -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding ResponseTime, StringFormat='{}{0}ms'}"
                                           FontSize="12"
                                           Opacity="0.7"
                                           VerticalAlignment="Center"
                                           Margin="15,0"
                                           IsVisible="{Binding !!ResponseTime}" />

                                <!-- 状态文本 -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding Status}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center">
                                    <TextBlock.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource SukiLowText}" />
                                        </Style>
                                        <Style Selector="TextBlock[Text=Available]">
                                            <Setter Property="Foreground" Value="{DynamicResource SukiGreen}" />
                                        </Style>
                                        <Style Selector="TextBlock[Text=Unavailable]">
                                            <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
                                        </Style>
                                        <Style Selector="TextBlock[Text=Timeout]">
                                            <Setter Property="Foreground" Value="#FFA500" />
                                        </Style>
                                    </TextBlock.Styles>
                                </TextBlock>
                            </Grid>
                        </suki:GlassCard>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
